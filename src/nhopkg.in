			tar Jcf "${PACKAGENAME}-${PACKAGEVERSION}.tar.zst" "${PACKAGENAME}-${PACKAGEVERSION}" 2> /dev/null
			tar --directory="${PACKAGENAME}-${PACKAGEVERSION}" -c --zstd -f "${PACKAGENAME}-${PACKAGEVERSION}.tar.zst" 2> /dev/null

