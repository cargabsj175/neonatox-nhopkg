					if [[ $(grep "GNU GENERAL PUBLIC LICENSE" "${NHOPKG_TMPDIR}/${PACKAGENAME}-${PACKAGEVERSION}/${LICENSE_FILE}") ]] \
					|| [[ $(grep "GPL" "${NHOPKG_TMPDIR}/${PACKAGENAME}-${PACKAGEVERSION}/${LICENSE_FILE}") ]]; then
